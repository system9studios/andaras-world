# Auto detect text files and perform LF normalization
* text=auto

# Java source files
*.java text eol=lf
*.kt text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Gradle
*.gradle text eol=lf
gradlew text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown
*.md text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Properties
*.properties text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose.yml text eol=lf

