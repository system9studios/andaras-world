{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "FactionDefinition",
  "description": "Definition of a faction with relationships and goals",
  "required": ["factionId", "name"],
  "properties": {
    "factionId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this faction"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Display name of the faction"
    },
    "description": {
      "type": "string",
      "description": "Description of the faction's goals and characteristics"
    },
    "relationships": {
      "type": "object",
      "description": "Relationships with other factions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "factionId": {
            "type": "string",
            "format": "uuid"
          },
          "standing": {
            "type": "integer",
            "minimum": -100,
            "maximum": 100,
            "description": "Relationship value (-100 to 100)"
          }
        },
        "required": ["factionId", "standing"]
      }
    },
    "territory": {
      "type": "array",
      "description": "Region/zone IDs controlled by this faction",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "author": { "type": "string" },
        "description": { "type": "string" }
      }
    }
  }
}
