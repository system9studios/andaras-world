{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "NPCTemplate",
  "description": "Template for an NPC character",
  "required": ["npcId", "name"],
  "properties": {
    "npcId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this NPC template"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Display name of the NPC"
    },
    "description": {
      "type": "string",
      "description": "Physical description and background"
    },
    "factionId": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to faction this NPC belongs to"
    },
    "disposition": {
      "type": "string",
      "enum": ["friendly", "neutral", "hostile", "unknown"],
      "description": "Default attitude toward the party"
    },
    "dialogueTreeId": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to dialogue tree for this NPC"
    },
    "stats": {
      "type": "object",
      "properties": {
        "health": { "type": "integer", "minimum": 1 },
        "armor": { "type": "integer", "minimum": 0 },
        "skills": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          }
        }
      }
    },
    "inventory": {
      "type": "array",
      "description": "Items NPC starts with",
      "items": {
        "type": "object",
        "properties": {
          "itemTemplateId": { "type": "string", "format": "uuid" },
          "quantity": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "behavior": {
      "type": "object",
      "properties": {
        "aggressive": { "type": "boolean" },
        "fleeThreshold": { "type": "integer", "minimum": 0, "maximum": 100 },
        "behaviorTree": { "type": "string" }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "author": { "type": "string" },
        "description": { "type": "string" }
      }
    }
  }
}
