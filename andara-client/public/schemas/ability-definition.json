{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "AbilityDefinition",
  "description": "Definition of an ability that can be used in combat or exploration",
  "required": ["abilityId", "name", "type", "description"],
  "properties": {
    "abilityId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this ability"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Display name of the ability"
    },
    "description": {
      "type": "string",
      "description": "Description of what the ability does"
    },
    "type": {
      "type": "string",
      "enum": ["active", "passive"],
      "description": "Whether the ability is actively used or passively applied"
    },
    "apCost": {
      "type": "integer",
      "minimum": 0,
      "description": "Action points required to use (only for active abilities)"
    },
    "cooldown": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Turns before ability can be used again"
    },
    "effects": {
      "type": "array",
      "description": "Effects applied when ability is used",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["damage", "heal", "buff", "debuff", "movement", "utility"]
          },
          "value": {
            "type": "number",
            "description": "Magnitude of the effect"
          },
          "target": {
            "type": "string",
            "enum": ["self", "ally", "enemy", "area", "target"]
          },
          "range": {
            "type": "integer",
            "minimum": 0,
            "description": "Range in tiles"
          },
          "duration": {
            "type": "integer",
            "minimum": 0,
            "description": "Duration in turns (for buffs/debuffs)"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "author": { "type": "string" },
        "description": { "type": "string" }
      }
    }
  }
}
